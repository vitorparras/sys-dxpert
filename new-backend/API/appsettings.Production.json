{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=prod-server.database.windows.net;Database=AuthSystem_Prod;User Id=admin;Password=your-secure-password;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Secret": "UseEnvironmentVariableOrSecretsManager",
    "ExpirationInMinutes": 60,
    "Issuer": "https://authsystem.prod",
    "Audience": "https://authsystem.clients.prod"
  },
  "RefreshToken": {
    "ExpirationInDays": 7
  },
  "AllowedOrigins": [
    "https://your-production-client.com"
  ],
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": 1
  }
}
